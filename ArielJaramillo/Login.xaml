<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArielJaramillo.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text=" Aplicacion para el registro de estudiantes UISRAEL - Login" 
                HorizontalTextAlignment="Center" 
                TextColor="White" FontSize="30"/>
            </Frame>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            <Label Text="Usuario:" TextColor="Black" FontSize="15">
            </Label>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Label Text="Contraseña:" TextColor="Black" FontSize="15">
            </Label>
            <Entry x:Name="txtPass" Placeholder="Ingrese la contraseña" IsPassword="True"/>
            <Button x:Name="btnLogin" Text="Iniciar sesion" Clicked="btnLogin_Clicked"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>